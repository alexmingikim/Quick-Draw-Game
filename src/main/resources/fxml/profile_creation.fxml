<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se206.ProfileCreationController">
   <children>
      <VBox alignment="CENTER" prefHeight="375.0" prefWidth="440.0" style="-fx-background-color: white;">
         <children>
            <Label text="Create Profile">
               <font>
                  <Font size="24.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="27.2" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER" prefHeight="27.2" prefWidth="200.0" style="-fx-background-color: white;">
               <children>
                  <Label text="Username:">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="usernameTextField" />
               </children>
               <VBox.margin>
                  <Insets top="27.2" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" prefHeight="27.2" prefWidth="200.0" style="-fx-background-color: white;">
               <VBox.margin>
                  <Insets top="27.2" />
               </VBox.margin>
            </HBox>
            <Button fx:id="confirmButton" mnemonicParsing="false" onAction="#onConfirm" style="-fx-background-color: #404040;" text="Confirm" textAlignment="CENTER" textFill="WHITE">
               <VBox.margin>
                  <Insets top="27.2" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="cancelButton" contentDisplay="TOP" mnemonicParsing="false" onAction="#onCancel" prefWidth="68.8" style="-fx-background-color: #404040;" text="Cancel" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets top="27.2" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</StackPane>
