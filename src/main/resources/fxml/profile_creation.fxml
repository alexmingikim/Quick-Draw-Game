<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane style="-fx-background-color: FFFFFF;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se206.ProfileCreationController">
   <children>
      <VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: white;">
         <children>
            <Label prefHeight="74.0" prefWidth="328.0" text="Create Profile">
               <font>
                  <Font name="Courier New Bold" size="38.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="27.2" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER" prefHeight="75.0" prefWidth="440.0" style="-fx-background-color: white;">
               <children>
                  <Label prefHeight="72.0" prefWidth="161.0" text="Username:">
                     <font>
                        <Font name="Courier New Bold Italic" size="26.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="usernameTextField" prefHeight="48.0" prefWidth="182.0">
                     <font>
                        <Font name="Courier New" size="20.0" />
                     </font></TextField>
               </children>
               <VBox.margin>
                  <Insets top="27.2" />
               </VBox.margin>
            </HBox>
            <Button fx:id="confirmButton" mnemonicParsing="false" onAction="#onConfirm" prefHeight="53.0" prefWidth="133.0" style="-fx-background-color: #404040;" text="Confirm" textAlignment="CENTER" textFill="WHITE">
               <VBox.margin>
                  <Insets top="27.2" />
               </VBox.margin>
               <font>
                  <Font name="Courier New Bold Italic" size="14.0" />
               </font>
            </Button>
            <Button fx:id="cancelButton" contentDisplay="TOP" mnemonicParsing="false" onAction="#onCancel" prefHeight="47.0" prefWidth="111.0" style="-fx-background-color: #404040;" text="Cancel" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Courier New Bold Italic" size="14.0" />
               </font>
               <VBox.margin>
                  <Insets top="27.2" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</StackPane>
